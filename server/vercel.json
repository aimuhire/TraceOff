{
  "version": 2,
  "name": "traceoff-server",
  "buildCommand": "npm ci && npm run build",
  "installCommand": "npm ci --include=dev",
  "outputDirectory": "dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "index.js" },
    { "src": "/admin/(.*)", "dest": "index.js" },
    { "src": "/health", "dest": "index.js" },
    { "src": "/", "dest": "index.js" }
  ]
}
