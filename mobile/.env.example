# Mobile App Environment Configuration
# Copy this file to .env and customize the values for your environment

# Environment
ENVIRONMENT=development

# API Configuration
# Development server URLs - works for all platforms including Android emulator
# Android emulator automatically forwards localhost:3000 to host machine
DEV_API_BASE_URL=http://localhost:3000

# Production server URLs (replace with your actual production URLs)
PROD_API_BASE_URL=https://your-production-server.com

# Android-specific configuration
ANDROID_API_BASE_URL=http://10.0.2.2:3000

# Emulator detection (optional - for debugging purposes)
IS_ANDROID_EMULATOR=false

# API Timeout Configuration
API_TIMEOUT_SECONDS=30
API_RETRY_ATTEMPTS=3

# Database Configuration
DATABASE_NAME=link_cleaner.db
DATABASE_VERSION=1

# Debug Configuration
ENABLE_DEBUG_LOGGING=true
